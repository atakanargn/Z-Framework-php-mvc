<?php

namespace App\Observers{namespace};

use zFramework\Core\Abstracts\Observer;

class {name} extends Observer
{
    /**
     * Insert before run that
     */
    public function oninsert(array $data)
    {
        echo "inserting";

        // $data['example_data'] = number_format($data['example_data'], 2);

        return $data;
    }

    /**
     * Insert after run that
     */
    public function oninserted(array $args)
    {
        echo "inserted: " . $args['id'];
    }

    /**
     * Update before run that
     */
    public function onupdate(array $data)
    {
        echo "updating:";

        // $data['example_data'] = number_format($data['example_data'], 2);

        return $data;
    }

    /**
     * Update after run that
     */
    public function onupdated(array $args)
    {
        echo "updated:";
        var_dump($args);
    }

    /**
     * Delete before run that
     */
    public function ondelete(array $args)
    {
        echo "deleting:";
        var_dump($args);
    }

    /**
     * Delete after run that
     */
    public function ondeleted(array $args)
    {
        echo "deleted:";
        var_dump($args);
    }
}
